<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_cluster_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wm_running"/>

    <TextView
        android:id="@+id/text_cluster_status"
        android:text="running"
        android:layout_toRightOf="@id/icon_cluster_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_cluster_time_since_finished"
        android:text="time"
        android:layout_below="@id/text_cluster_status"
        android:layout_toRightOf="@id/icon_cluster_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

